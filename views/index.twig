{% extends 'layout.twig' %}

{% block body %}
  <div class="site-wrapper">
    <div class="site-wrapper-inner">
      <div class="main-container">
        <div class="inner cover">
          <span class="glyphicon glyphicon-link"></span>
          <h1>URL Shortener</h1>
          <h4>Eslam nasser</h4>

          <div class="row">

            <div class="col-lg-12">
              <span class="how-many"><span>{{number_of_urls}}</span> urls has been squeezed</span>
              <form class="input-group input-group-lg input-warpper">
                <input id="user_url" name="user_url_name" type="text" class="form-control" placeholder="Paste a link...">
                <span class="input-group-btn">
                  <button class="btn btn-shorten" type="submit">SHORTEN</button>
                </span>
              </form>
              <div class="input-group input-group-lg show-link-warpper" style="display: none">
                <input id="generated_url" type="text" class="form-control" disabled>
                <span class="input-group-btn">
                  <a href="" target="_blank" class="btn btn-shorten" type="submit">Go to &nbsp; <i class="glyphicon glyphicon-send"></i></a>
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  <style>
  .col-lg-12{
    position: relative;
  }
  .how-many{
    position: absolute;
    bottom: -20px;
    left: 25px;
  }
  </style>
{% endblock %}
